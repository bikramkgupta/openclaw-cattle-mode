# ============================================================
# LOCAL DEVELOPMENT (.env.docker) — used by docker-compose.yml
# Copy this file to .env.docker and fill in required values.
# Usage: docker compose --env-file .env.docker up -d
# ============================================================

# Telegram (required)
TELEGRAM_BOT_TOKEN=
TELEGRAM_ALLOWFROM=6944791786

# Gradient (required)
GRADIENT_API_KEY=

# Optional model providers
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Optional override (otherwise: gradient/anthropic-claude-opus-4.6)
AGENT_DEFAULT_MODEL=

# Agent identity
AGENT_ID=agent-dev
AGENT_NAME=OpenClaw Dev Agent

# Gateway auth (required) — generate: openssl rand -hex 32
OPENCLAW_GATEWAY_TOKEN=

# Object store — RustFS local defaults (do not change for local dev)
SPACES_BUCKET=openclaw-dev
SPACES_REGION=us-east-1
SPACES_ACCESS_KEY_ID=rustfsadmin
SPACES_SECRET_ACCESS_KEY=rustfsadmin
S3_ENDPOINT_URL=http://rustfs:9000

# RustFS image (optional override)
RUSTFS_IMAGE=rustfs/rustfs:1.0.0-alpha.82
